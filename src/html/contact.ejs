<div class = "col-md-8">
<!-Input Headings will eventually appear inside box and disappear once you start typing->
<form>
  <fieldset>
    <legend>Send us a message:</legend>

    <input type = "text"
           name = "firstname"
           placeholder="First Name">
    <br>
    <br>
    <input type = "text"
           name = "lastname"
           placeholder="Last Name">
    <br>
    <br>
    <input type = "text"
           name = "subject"
           placeholder = "Subject">
    <br>
    <br>
    <textarea cols = "40"
              rows = "6"
              style = "width:300px; height: 100px;"
              class = "resize"
              name = "usermessage"
              placeholder="Message">
    </textarea>
    <br>
    <input type = "submit"
           value = "Send">
 </fieldset>
</form>
